import pygame
import os.path
from sys import exit

scriptDir = os.path.dirname(os.path.abspath(__file__))

def main():
    # pygame setup
    pygame.init()
    screen = pygame.display.set_mode((1200, 720))
    clock = pygame.time.Clock()
    
    #Surfaces for ground and sky
    skySurface = pygame.image.load(os.path.join(scriptDir,"graphics","sky.png")).convert()
    groundSurface = pygame.image.load(os.path.join(scriptDir,"graphics","grass2.png")).convert()
    largeSky=pygame.transform.scale2x(skySurface)
    largeGround=pygame.transform.scale_by(groundSurface,4)
    
    while True:
        for event in pygame.event.get():
            if event.type == pygame.QUIT: #Exits if 'X' button is clicked
                pygame.quit()
                exit()
        
        #Places the sky and ground on screen
        screen.blit(largeSky,(0,0)) 
        screen.blit(largeGround,(0,475))

    #RENDER YOUR GAME HERE
        
        pygame.display.update()
        clock.tick(60)  # limits FPS to 60

if __name__ == "__main__":
    main()
